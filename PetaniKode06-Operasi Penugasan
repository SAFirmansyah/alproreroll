#include <stdio.h>

void main(){
    int a, b;
    printf("Input Nilai A = "); scanf("%d", &a);
    printf("Input Nilai B = "); scanf("%d", &b);

    b += a; 
    printf("Hasil b += a adalah %d\n", b);

    b -= a; 
    printf("Hasil b -= a adalah %d\n", b);

    b *= a; 
    printf("Hasil b *= a adalah %d\n", b);

    b /= a; 
    printf("Hasil b /= a adalah %d\n", b);

    b %= a; 
    printf("Hasil b %= a adalah %d\n", b);
}
